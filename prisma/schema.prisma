// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id       String    @id
  sessions Session[]
}

model Session {
  id       String        @id @default(cuid())
  client   Client        @relation(fields: [clientId], references: [id])
  clientId String
  host     String
  hostIp   String?
  pings    SessionPing[]
}

model SessionPing {
  id         String  @id @default(cuid())
  session    Session @relation(fields: [sessionId], references: [id])
  sessionId  String
  requestId  Int
  alive      Boolean
  min        String?
  max        String?
  avg        String?
  stddev     String?
  packetLoss String?
}
